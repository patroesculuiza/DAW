@model lab6.Models.Utility
@{
    ViewBag.Title = "Create a utility type";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Utility", method: FormMethod.Post))
{
    @Html.LabelFor(bt => bt.Name, "Name:")
    <br />
    @Html.TextBoxFor(bt => bt.Name, null, new { placeholder = "Type in the utility type's name", @class = "form-control" })
    @Html.ValidationMessageFor(bt => bt.Name, null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Create</button>
}